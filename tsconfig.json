{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "app/*": ["app/*"],
      "config/*": ["config/*"],
      "controllers/*": ["controllers/*"],
      "models/*": ["models/*"],
      "middleware/*": ["middleware/*"],
      "routes/*": ["routes/*"],
      "utils/*": ["utils/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
